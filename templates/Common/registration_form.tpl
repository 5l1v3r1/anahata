{config_load file=templates.ini section="common" scope="global"}{literal}<link href="css/tables.css" rel="stylesheet" type="text/css" />    <style type="text/css">span {font-size:11pt;color:#FFFFFF;            text-align: left;}    </style>{/literal}<div id="patientForm">        <h1>Online Registration</h1>    <p>Already registered? <a href="{#script_url#}{seo_url rm="Login"}" >Click here</a>  to login.</p>    <form action="{#script_url#}{seo_url rm = $seo_url param1=save}" method="post" onsubmit="return check_terms();" name="frm">        <div class="content-container">            <fieldset name="information" id="information">                <legend><strong>Registration Information</strong></legend>                <table width="100%">                    <tr>                        <td width="150px">Email</td>                        <td>                            <input type="text" name="email" value="{$data.email}"  title="email___Enter valid email" />                        </td>                    </tr>                    {if $errors.login}                    <tr><td>&nbsp;</td><td><small class="required_class">This e-mail is already registered.</small></td></tr>                    {/if}                    <tr>                        <td>Password</td>                        <td>                            <input type="password" name="password"   title="string___Please enter your password" />                        </td>                    </tr>                    <tr>                        <td>Retype Password</td>                        <td>                            <input type="password" name="confirm_password"  title="string___Please enter the password again" />                        </td>                    </tr>                    {if $errors.password}                    <tr><td>&nbsp;</td><td><small class="required_class">Passwords are not the same!</small></td></tr>                    {/if}                    <tr>                        <td>Name</td>                        <td>                            <input type="text" name="name" value="{$data.name}"/>                        </td>                    </tr>                </table>            </fieldset>        </div>        {if $show_terms}        <div class="content-container">            <fieldset name="information" id="information">            <legend><strong>Registration [popup_module?section=4]</strong></legend>            <input name="agree" type="checkbox" id="agree_id" tabindex="2px" value="Agree" {if $data.agree}checked{/if} />            <label for="agree_id" class="wide">Ticking this check box certifies that you to the terms.</label>            {if $errors.agree}            <small class="required_class"><br />Please read the terms and conditions</small>            {/if}            </fieldset>        </div>        {/if}        {if $show_captcha}        <div class="content-container">            <fieldset name="information" id="information">            <legend><strong>Captcha</strong></legend>                <img src="{#script_url#}{seo_url rm=Get_Img param1=registration param2=$smarty.now}" alt="captcha"/> <br/>                {if $errors.captcha}                <small class="required_class">Please enter correct code</small>                {/if}<br/>                <input type="text" name="check_captcha" title="string___Please enter code" />            </fieldset>        </div>        {/if}            <table>                <tr>                    <td align="center">                        <input type="hidden" name="thank_you" value="{$thank_you|escape}" />                        <input type="submit" class="submit-button" name="submit" value="Submit"/>                    </td>                </tr>            </table>    </form></div>{literal}    <script type="text/javascript">                    validator.add('frm');</script>{/literal}